name: Verify Formatting

on:
  - pull_request
  - push

jobs:
  verify-formatting:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Verify That The Code Is Formatted
        uses: dtolnay/rust-toolchain@stable
        run: rustfmt --check ./src/**/*.rs    
